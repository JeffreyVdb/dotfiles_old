[core]
	editor = nvim
	pager = delta --dark

[user]
	email = jeffrey@vandenborne.co
	name = Jeffrey Vandenborne

[alias]
	c = commit --verbose
	ap = add --patch
    dft = difftool

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = diff3

[pager]
    difftool = true

[difftool]
    prompt = false

[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"

[diff]
    tool = difftastic
    colorMoved = default

[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true
    side-by-side = true
    syntax-theme = gruvbox-dark
    zero-style = syntax
    line-numbers = true
